<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- 路径导航 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_path_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/divider"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/text_current_focus"
                style="@style/TextAppearance.FamilyTree.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_focus"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_path"
                style="@style/TextAppearance.FamilyTree.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/primary"
                tools:text="张世德 > 张明德 > 张永康" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_descendants_count"
                    style="@style/TextAppearance.FamilyTree.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    tools:text="直系后代: 24人" />

                <TextView
                    android:id="@+id/text_living_count"
                    style="@style/TextAppearance.FamilyTree.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    tools:text="在世: 18人" />

                <TextView
                    android:id="@+id/text_gender_ratio"
                    style="@style/TextAppearance.FamilyTree.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="男:女 17:7" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 缩放控制 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_zoom_control"
        android:layout_width="36dp"
        android:layout_height="72dp"
        android:layout_gravity="end|top"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button_zoom_in"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="放大"
                android:src="@drawable/ic_add"
                android:tint="@color/text_secondary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <ImageButton
                android:id="@+id/button_zoom_out"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="缩小"
                android:src="@drawable/ic_remove"
                android:tint="@color/text_secondary" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 家族树内容区域 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:fillViewport="true">

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- 家族树视图容器 -->
                <com.example.familytree.ui.familytree.view.FamilyTreeView
                    android:id="@+id/family_tree_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="2000dp"
                    android:minHeight="3000dp" />
            </FrameLayout>
        </HorizontalScrollView>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout> 